{

  "description": "Displays news articles on heise.de and m.heise.de on a single page",
  "manifest_version": 2,
  "name": "Heise Single Page",
  "version": "1.0.1",
  "homepage_url": "https://github.com/dns2utf8/heise_single_page",
  "icons": {
    "48": "icons/logo.png"
  },

  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.heise.de/*"],
      "js": ["./hsp.js"]
    }
  ]

}
