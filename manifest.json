{

  "description": "Displays news articles on heise.de as single page",
  "manifest_version": 2,
  "name": "Heise Single Page",
  "version": "1.3.0",
  "homepage_url": "https://gitlab.com/dns2utf8/heise_single_page",
  "icons": {
    "48": "icons/logo.png"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "incognito": "spanning",
  
  "content_scripts": [
    {
      "matches": ["*://*.heise.de/*"],
      "js": ["./hsp.js"],
      "run_at": "document_end"
    }
  ],
  
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "chrome_style": true
  },
  
  "applications": {
      "gecko": {
          "strict_min_version": "57.0a1"
      }
  }

}
